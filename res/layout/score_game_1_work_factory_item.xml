<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="74dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="74dp"
            android:layout_height="132dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/score_game_1_work_factroy_background"
            android:paddingBottom="4dp"
            android:paddingLeft="0.8dp"
            android:paddingRight="4dp" >

            <com.orfid.youxikuaile.widget.CircularImageView
                android:id="@+id/hayou_game_1_work_factroy_user_icon_1"
                android:layout_width="64dp"
                android:layout_height="144dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/loding" />

            <TextView
                android:id="@+id/hayou_game_1_work_factroy_user_score_num_1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/score_game_1_work_factory_bottom"
                android:gravity="center"
                android:padding="1dp"
                android:paddingBottom="2dp"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            

            <TextView
                android:id="@+id/hayou_game_1_work_factroy_user_score_name_1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_above="@id/hayou_game_1_work_factroy_user_score_num_1"
                android:layout_alignLeft="@+id/hayou_game_1_work_factroy_user_score_name_1"
                android:layout_alignRight="@+id/hayou_game_1_work_factroy_user_icon_1"
                android:layout_margin="3dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="12sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/hayou_game_1_work_factroy_score_exit_1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/exit_factroy_button_selector" />
    </LinearLayout>

</LinearLayout>