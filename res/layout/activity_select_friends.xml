<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/header_bar_bg_color"
        >
        <TextView
            android:id="@+id/tv_ps_cancel" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:text="选择联系人"
            android:layout_centerInParent="true"
            />
        <TextView 
            android:id="@+id/tv_ps_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="确定"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/header_right_save_selector"
            />
    </RelativeLayout>
    
    <GridView
        android:id="@+id/gv_ps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:numColumns="5"
        android:verticalSpacing="10dp"
        android:scrollbars="none" >
    </GridView>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ListView
            android:id="@+id/lv_ps1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            >
            <ImageView 
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/icon5"
                android:layout_gravity="center"
                />
