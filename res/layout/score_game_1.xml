<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <com.orfid.youxikuaile.widget.ScoreView
        android:id="@+id/hayou_game_1_zone"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:background="@drawable/bj_left" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/right_bj"
        android:orientation="vertical" >

        <Button
            android:id="@+id/hayou_game_1_exit_btn"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@drawable/exit_button_selector" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5" >

            <com.orfid.youxikuaile.widget.CircularImageView
                android:id="@+id/center_score_game_1_user_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/loding" >
            </com.orfid.youxikuaile.widget.CircularImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/center_score_game_1_user_icon"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/center_score_game_1_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/score_game_text"
                    android:gravity="left|center_vertical"
                    android:paddingBottom="1dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/score_game_text"
                    android:orientation="horizontal"
                    android:padding="1dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="5dp"
                        android:text="积分："
                        android:textColor="#ffcc00"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/center_score_game_1_user_score_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center_vertical"
                        android:text="8888"
                        android:textColor="#ffcc00"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/center_score_game_1_work_factroy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/score_an_button_selector" />

            <Button
                android:id="@+id/center_score_game_1_invite_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/invite_button_selector" />
        </LinearLayout>

        <Button
            android:id="@+id/center_score_game_1_employee_friends"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/score_gu_button_selector" />

        <Button
            android:id="@+id/center_score_game_1_employee_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/score_employee_button_selector" />

        <Button
            android:id="@+id/center_score_game_1_friends_factroy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/score_friend_button_selector" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/center_score_game_1_recommend_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/score_recommend_button_selector" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="#00000000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/center_score_game_1_one_click"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|left"
                android:layout_weight="3"
                android:background="@drawable/score_get_button_selector" />

            <Button
                android:id="@+id/center_score_game_1_help_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/score_help_button_selector" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>