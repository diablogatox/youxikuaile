<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/arrast_order_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/header_bar_bg_color" >

        <Button
            android:id="@+id/arrast_order_back_btn"
            android:layout_width="42dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:drawableLeft="@drawable/icon_back"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/arrast_order_text"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="@string/orders_for_the_arrest"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/arrast_order_three_share_btn"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/share_button_selector"
            android:gravity="center"
            android:padding="1px"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/ha_you_tizi_share"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <Button
            android:id="@+id/arrast_order_three_save_btn"
            android:layout_width="60dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/arrast_order_three_share_btn"
            android:background="@drawable/share_button_selector"
            android:gravity="center"
            android:padding="1px"
            android:shadowColor="#80000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="@string/hayou_center_guanzhu_selected_group_save"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/arrast_order_layout"
        android:background="@drawable/arrast_bg" >

        <LinearLayout
            android:id="@+id/arrast_layout_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <View
                android:id="@+id/arrast_layout_child"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:background="#00000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:background="#00000000" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5"
                        android:background="@drawable/arrast_order" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.8"
                        android:background="#00000000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2.4" >

                    <ImageView
                        android:id="@+id/arrast_order_user_icon"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1.3"
                        android:scaleType="centerCrop"
                        android:src="@drawable/arrast_user_icon_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="2"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/arrast_order_user_name"
                                android:layout_width="46dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/arrest_name" />

                            <TextView
                                android:id="@+id/arrast_user_name_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/arrast_order_user_name"
                                android:background="@drawable/arrast_text_bg"
                                android:gravity="center|left"
                                android:paddingBottom="0px"
                                android:paddingLeft="10dp"
                                android:paddingRight="5dp"
                                android:paddingTop="0px"
                                android:singleLine="true"
                                android:textColor="#CC0000"
                                android:textColorHint="#CC0000"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/arrast_order_user_sex"
                                android:layout_width="46dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/arrest_sex" />

                            <TextView
                                android:id="@+id/arrast_user_sex_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/arrast_order_user_sex"
                                android:background="@drawable/arrast_text_bg"
                                android:gravity="center|left"
                                android:paddingBottom="0px"
                                android:paddingLeft="10dp"
                                android:paddingRight="5dp"
                                android:paddingTop="0px"
                                android:singleLine="true"
                                android:textColor="#CC0000"
                                android:textColorHint="#CC0000"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="15dp"
                            android:layout_weight="1" >

                            <ImageView
                                android:id="@+id/arrast_order_user_job"
                                android:layout_width="46dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/arrest_job" />

                            <TextView
                                android:id="@+id/arrast_user_job_text"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@id/arrast_order_user_job"
                                android:background="@drawable/arrast_text_bg"
                                android:gravity="center|left"
                                android:paddingBottom="0px"
                                android:paddingLeft="10dp"
                                android:paddingRight="5dp"
                                android:paddingTop="0px"
                                android:singleLine="true"
                                android:textColor="#CC0000"
                                android:textColorHint="#CC0000"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="2.8" >

                    <ImageView
                        android:id="@+id/arrast_order_info_text"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/arrest_error" />

                    <TextView
                        android:id="@+id/arrast_info_text_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/arrast_order_info_text"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="5dp"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:lineSpacingExtra="2.5dp"
                        android:maxLines="4"
                        android:padding="0px"
                        android:textColor="#3F3E3C"
                        android:textColorHint="#3F3E3C"
                        android:textSize="15sp" />
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2.1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="0.7"
                            android:orientation="horizontal" >

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.3" />

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2" >

                                <ImageView
                                    android:id="@+id/arrast_order_user_post_name"
                                    android:layout_width="65dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/arrest_postname" />

                                <TextView
                                    android:id="@+id/arrast_user_post_name_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@id/arrast_order_user_post_name"
                                    android:background="@drawable/arrast_text_bg"
                                    android:gravity="center|left"
                                    android:paddingBottom="0px"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="5dp"
                                    android:paddingTop="0px"
                                    android:singleLine="true"
                                    android:textColor="#000000"
                                    android:textSize="14sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="2" >

                            <ImageView
                                android:id="@+id/arrast_order_user_address"
                                android:layout_width="65dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:adjustViewBounds="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/arrest_address" />

                            <TextView
                                android:id="@+id/arrast_user_address_text"
                                android:layout_width="215dp"
                                android:layout_height="match_parent"
                                android:layout_below="@id/arrast_order_user_address"
                                android:layout_marginTop="5dp"
                                android:background="#00000000"
                                android:ellipsize="end"
                                android:gravity="left"
                                android:lineSpacingExtra="2dp"
                                android:maxLines="2"
                                android:padding="0px"
                                android:text="您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您您"
                                android:textColor="#CC0000"
                                android:textColorHint="#CC0000"
                                android:textSize="15sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="7dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/signet" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#ffd101" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/arrast_order_user_load"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="12dp"
                            android:layout_weight="3.5"
                            android:adjustViewBounds="true"
                            android:background="#00000000"
                            android:contentDescription="@string/app_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/arrest_bottom_title" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1.0" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:layout_weight="3.5" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="12dp"
                        android:layout_weight="1.0"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        android:src="@drawable/two_code" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>