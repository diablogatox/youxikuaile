<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global_bg_color"
    android:orientation="vertical" >
    
    <RelativeLayout 
		android:layout_width="fill_parent"
  		android:layout_height="45dp"
  		android:id="@+id/title" 
		android:background="#ffb400"
		android:gravity="center_vertical"  >   			
		<TextView
		    android:id="@+id/name_tv"
			android:layout_width="wrap_content" 
	      	android:layout_height="wrap_content" 
	      	android:layout_centerInParent="true"
	      	android:textSize="20sp"
			android:textColor="#ffffff" /> 
		<TextView
		    android:id="@+id/tv_user_info"
		    android:layout_width="wrap_content" 
       		android:layout_height="wrap_content"
       		android:layout_alignParentRight="true" 
       		android:layout_centerVertical="true"
       		android:layout_marginRight="12dp"
       		android:textSize="20sp"
       		android:textColor="#ffffff"
       		android:text="资料" />    
 
	</RelativeLayout>
	
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#333">
                <ImageView
                    android:id="@+id/user_picture"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/user_picture"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:text="ID" />
                        <TextView
                            android:id="@+id/uid_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:text="金币" />
                        <TextView
                            android:id="@+id/gold_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="0" />
                        <View android:layout_width="10dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:text="积分" />
                        <TextView
                            android:id="@+id/score_num_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:text="0" />
                    </LinearLayout>
                    
                </LinearLayout>
                
            </RelativeLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:orientation="vertical"
            	android:background="#f3f4f9">
                
                <RelativeLayout
                    android:id="@+id/my_follow_list_rl_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="2dp"
		            android:background="@drawable/bg_item"
		            android:clickable="true"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="关注" />
		            <TextView
		                android:id="@+id/follow_num_tv"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:gravity="center_vertical"
		                android:textSize="16sp"
		                android:drawablePadding="5dp"
		                android:drawableRight="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:id="@+id/fans_list_rl"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="@drawable/bg_item"
		            android:clickable="true"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="粉丝" />
		            <TextView
		                android:id="@+id/fans_num_tv"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:gravity="center_vertical"
		                android:textSize="16sp"
		                android:drawablePadding="5dp"
		                android:drawableRight="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:id="@+id/mine_gift_rl_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="2dp"
		            android:background="@drawable/bg_item"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="礼物" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:id="@+id/mine_recharge_rl_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="@drawable/bg_item"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="充值" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        
		        <RelativeLayout
		            android:id="@+id/mine_sitters_rl_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="@drawable/bg_item"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
				    	android:id="@+id/sitter_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:layout_centerVertical="true"
						android:gravity="center"
						android:textColor="#000"
						android:textSize="18sp"
						android:text="陪玩" />
				<TextView
						android:id="@+id/sitter_desc_tv"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:textSize="16sp"
						android:drawablePadding="5dp"
						android:singleLine="true"
						android:gravity="right"
						android:layout_toRightOf="@id/sitter_title"
						android:paddingLeft="50dp"
						android:drawableRight="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:id="@+id/mine_feed_rl_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="2dp"
		            android:background="@drawable/bg_item"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:id="@+id/feed_title"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="个人动态" />
		            <TextView
		                android:id="@+id/last_feed_tv"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:gravity="center_vertical"
		                android:textSize="16sp"
		                android:drawablePadding="5dp"
		                android:drawableRight="@drawable/icon_arrow_right_gray" />
		            <LinearLayout
					    android:id="@+id/feed_item_ll"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_toLeftOf="@id/last_feed_tv"
					    android:layout_toRightOf="@id/feed_title"
					    android:layout_alignTop="@id/feed_title"
					    android:paddingLeft="50dp"
					    android:paddingRight="8dp"
					    android:gravity="right|center_vertical"
					    android:visibility="visible"
					    android:orientation="horizontal">
					    <ImageView
					        android:id="@+id/feed_item_file_iv"
					        android:layout_width="50dp"
					        android:layout_height="50dp"
					        android:scaleType="centerCrop" />
					    <TextView
					        android:id="@+id/feed_item_text_tv"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:maxLines="3"
					        android:paddingLeft="10dp"
					        android:ellipsize="end" />
					</LinearLayout>
		        </RelativeLayout>
		        <RelativeLayout
		            android:id="@+id/mine_games_rl_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="@drawable/bg_item"
		            android:clickable="true"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="我的游戏" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        
		        <RelativeLayout
                    android:id="@+id/btn_settings"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="@drawable/bg_item"
		            android:clickable="true"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="设置" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    

</LinearLayout>
