<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <RelativeLayout 
		android:layout_width="fill_parent"
  		android:layout_height="45dp"
  		android:id="@+id/title" 
		android:background="#ffb400"
		android:gravity="center_vertical"  >   			
		<TextView
		    android:id="@+id/name_tv"
			android:layout_width="wrap_content" 
	      	android:layout_height="wrap_content" 
	      	android:layout_centerInParent="true"
	      	android:textSize="20sp"
	      	android:text="周黑猫"	
			android:textColor="#ffffff" /> 
		<TextView
		    android:id="@+id/tv_user_info"
		    android:layout_width="wrap_content" 
       		android:layout_height="wrap_content"
       		android:layout_alignParentRight="true" 
       		android:layout_centerVertical="true"
       		android:layout_marginRight="12dp"
       		android:textSize="20sp"
       		android:textColor="#ffffff"
       		android:text="资料" />    
 
	</RelativeLayout>
	
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:padding="10dp"
                android:background="#333">
                <ImageView
                    android:id="@+id/user_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_picture90x90" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/user_picture"
                    android:paddingLeft="10dp"
                    android:textColor="#000"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:text="ID" />
                        <TextView
                            android:id="@+id/uid_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="88888" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:text="金币" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="88888" />
                        <View android:layout_width="10dp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="8dp"
                            android:textSize="16sp"
                            android:text="粉丝" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:singleLine="true"
                            android:text="88888" />
                    </LinearLayout>
                    
                </LinearLayout>
                
            </RelativeLayout>
            
            
            <LinearLayout
                android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:orientation="vertical"
            	android:background="#f3f4f9">
                
                <RelativeLayout
                    android:id="@+id/my_follow_list_rl_view"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="2dp"
		            android:background="#fff"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="关注" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:id="@+id/fans_list_rl"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="#fff"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="粉丝" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="2dp"
		            android:background="#fff"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="礼物" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="#fff"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="充值" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="#fff"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="陪玩" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="2dp"
		            android:background="#fff"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="个人动态" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        <RelativeLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="#fff"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="我的游戏" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
		        
		        <RelativeLayout
                    android:id="@+id/btn_settings"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginBottom="10dp"
		            android:background="#fff"
		            android:paddingLeft="14dp"
		            android:paddingRight="14dp"
		            android:paddingTop="8dp"
		            android:paddingBottom="8dp">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentLeft="true"
		                android:layout_centerVertical="true"
		                android:gravity="center"
		                android:textColor="#000"
		                android:textSize="18sp"
		                android:text="设置" />
		            <ImageView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_alignParentRight="true"
		                android:layout_centerVertical="true"
		                android:src="@drawable/icon_arrow_right_gray" />
		        </RelativeLayout>
                
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    

</LinearLayout>
