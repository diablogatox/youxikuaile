<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="8dp" >
    <FrameLayout
        android:id="@+id/icon_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	    <ImageView
	        android:id="@+id/msg_icon"
	        android:layout_width="60dp"
	        android:layout_height="60dp"
	        android:layout_marginTop="6dp"
	        android:paddingBottom="6dp"
	        android:layout_gravity="left|center_vertical"
	        android:clickable="false"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:src="@color/grey" />
	    <!-- group icon -->
	    <RelativeLayout
	        android:id="@+id/group_icon"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:visibility="gone">
	        <com.orfid.youxikuaile.widget.CircleImageView
	        	android:id="@+id/top_center"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	            android:layout_centerHorizontal="true"
	        	android:scaleType="centerCrop"
	        	app:border_color="#ccffcc"
	        	app:border_width="1dp"
	            android:src="@drawable/no_portrait_circle" />
	        <com.orfid.youxikuaile.widget.CircleImageView
	            android:id="@+id/bottom_left"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
	        	android:scaleType="centerCrop"
	        	app:border_color="#ccffcc"
	        	app:border_width="1dp"
				android:src="@drawable/no_portrait_circle"
				android:layout_marginBottom="8dp" android:layout_alignParentBottom="true"
				android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
				android:layout_marginLeft="2dp"/>
	        <com.orfid.youxikuaile.widget.CircleImageView
	            android:id="@+id/bottom_right"
	            android:layout_width="35dp"
	            android:layout_height="35dp"
				android:scaleType="centerCrop"
	        	app:border_color="#ccffcc"
	        	app:border_width="1dp"
	            android:src="@drawable/no_portrait_circle"
				android:layout_alignTop="@+id/bottom_left" android:layout_toRightOf="@+id/bottom_left"
				android:layout_toEndOf="@+id/bottom_left" android:layout_marginLeft="-5dp"
				android:layout_marginTop="-2dp"/>
	    </RelativeLayout>
	</FrameLayout>
    <Button
        	android:id="@+id/newmsg_hint"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:clickable="false"
	        android:focusable="false"
	        android:focusableInTouchMode="false"
	        android:layout_marginLeft="-14dp"
	        android:layout_marginTop="2dp"
	        android:visibility="gone"
	        android:layout_alignRight="@id/icon_view"
	        android:background="@drawable/icon_news_red"
	        android:textColor="@color/white" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_alignParentRight="true" />
            <TextView
                android:id="@+id/session_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/msg_time"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="left"
                android:textSize="16sp"
                android:textColor="@color/black" />
        </RelativeLayout>
        <TextView
            android:id="@+id/msg_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textSize="14sp"
            android:textColor="@color/grey"
			android:ellipsize="end" />
    </LinearLayout>

</LinearLayout>
