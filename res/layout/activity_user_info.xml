<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f3f4f9"
              android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/title"
            android:background="#ffb400"
            android:gravity="center_vertical"  >
        <TextView
            	android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:text="我的资料"
                android:textColor="#ffffff" />
        <ProgressBar
			    android:id="@+id/progress_bar"
			    android:layout_width="wrap_content" android:layout_height="wrap_content"
			    android:layout_toRightOf="@id/tv_title"
			    android:layout_centerVertical="true"
			    android:paddingLeft="5dp"
			    android:visibility="gone"
			    style="@android:style/Widget.ProgressBar.Small"/>
        <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:enabled="false"
                android:background="@drawable/header_right_save_selector"
                android:text="保存" />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back"
            android:background="@null" />

    </RelativeLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:background="#333">
                <ImageView
                        android:id="@+id/user_picture"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/user_picture90x90" />
                <RelativeLayout
                        android:id="@+id/rl_edit_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/user_picture"
                        android:paddingLeft="10dp"
                        android:textColor="#000">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon_arrow_right_gray" />

                </RelativeLayout>

            </RelativeLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="#f3f4f9">

                <RelativeLayout
                        android:id="@+id/rl_edit_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="昵称" />
                    <TextView
		                    android:id="@+id/tv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/icon_arrow_right_gray" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line" />
                <RelativeLayout
		                android:id="@+id/rl_edit_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="性别" />
                    <TextView
		                    android:id="@+id/tv_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/icon_arrow_right_gray" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line" />
                <RelativeLayout
		                android:id="@+id/rl_edit_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="年龄" />
                    <TextView
		                    android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/icon_arrow_right_gray" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line" />
                <RelativeLayout
		                android:id="@+id/rl_edit_area"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="地区" />
                    <TextView
                        	android:id="@+id/area_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/icon_arrow_right_gray" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line" />
                <RelativeLayout
		                android:id="@+id/rl_edit_college"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="#fff"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:text="大学" />
                    <TextView
                        	android:id="@+id/college_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:drawablePadding="5dp"
                            android:drawableRight="@drawable/icon_arrow_right_gray" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</LinearLayout>