<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#f3f4f9"
              android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:id="@+id/title"
            android:background="#ffb400"
            android:gravity="center_vertical"  >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:text="发布动态"
                android:textColor="#ffffff" />
        <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:background="@drawable/header_right_save_selector"
                android:text="发布" />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_back"
            android:background="@null" />

    </RelativeLayout>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<EditText
			android:id="@+id/et_content"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:background="#fff"
			android:padding="16dp"
			android:maxLength="140"
			android:hint="分享新鲜事..."
			android:textColor="#000"
			android:textSize="17sp"
		    android:gravity="top">
				<requestFocus />
		</EditText>

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="40dip"
				android:background="#fff"
				android:orientation="horizontal" >

			<LinearLayout
					android:layout_width="100dip"
					android:layout_height="fill_parent"
					android:layout_weight="1"
					android:gravity="right"
					android:padding="8dip" >

				<TextView
						android:id="@+id/newsfeedpublish_count"
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:gravity="center"
						android:text="0"
						android:textColor="#80333333"
						android:textSize="14sp" />

				<TextView
						android:layout_width="wrap_content"
						android:layout_height="fill_parent"
						android:gravity="center"
						android:text="/140"
						android:textColor="#80333333"
						android:textSize="14sp" />
			</LinearLayout>
		</LinearLayout>

		<View android:layout_width="match_parent" android:layout_height="1dp"
		      android:background="#cecece" />

		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="40dip"
				android:background="#fff7f7f7"
				android:gravity="center_vertical"
				android:orientation="horizontal" >

			<ImageView
					android:id="@+id/newsfeedpublish_voice"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:src="@drawable/white1" />

			<ImageView
					android:id="@+id/newsfeedpublish_poi"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:src="@drawable/white2" />

			<ImageView
					android:id="@+id/newsfeedpublish_image"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:src="@drawable/white3" />
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1" />

		</LinearLayout>

	</LinearLayout>


</LinearLayout>