<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/catalogTv1"
        style="@style/MMListCatalog"
        android:layout_height="wrap_content" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/iv_select_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/select_friends"
            />
        <ImageView
	        android:id="@+id/iv_sf_pic"
	        android:layout_width="50dp"
	        android:layout_height="50dp"
	        android:background="#cecece"
	        android:layout_marginTop="8dp"
	        android:layout_marginBottom="8dp"
	        android:layout_toRightOf="@+id/iv_select_friends"
	        android:layout_centerVertical="true"
	        />
    	<TextView 
        	android:id="@+id/tv_sf_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="@color/black"
        	android:textSize="16sp"
        	android:layout_centerVertical="true"
        	android:layout_marginLeft="10dp"
        	android:layout_toRightOf="@+id/iv_sf_pic"
        	/>
    </RelativeLayout>

</LinearLayout>
